@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section includes {
    <link href="@Url.Content("~/Content/Chat.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/Ours/chat.js")">
    </script>
}
  
<div id="content">
    <div id="chat">
        <div id="chat-info">
            <div id="chat-status">
                <p>Server Status</p>
                <canvas id="chat-status-icon" width="10" height="10"></canvas>
            </div>
    
            <div id="chat-users">
                <p>Online Users</p>
                <div id="chat-users-list"></div>
            </div>        
        </div>
        
        <div id="chat-messages"></div>

        <div id="chat-message-composer">
            <input type="text" id="chat-message-text" />
            <input type="submit" id="chat-message-sender" value="Send" />
        </div>    
    </div>
</div>