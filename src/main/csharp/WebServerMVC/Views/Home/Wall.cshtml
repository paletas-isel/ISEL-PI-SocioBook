@using Model
@using WebServerMVC.Models
@model IEnumerable<Share>


@{
    ViewBag.Title = "Wall";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/Ours/wall.js")" type="text/javascript"></script>
        
<div id="container" class="subpage">
	<div id="menu">
		<ul id="options">
			<li><a id="status_anchor" href="#">Status</a></li>
			<li><a id="photo_anchor" href="#">Photo</a></li>
			<li><a id="link_anchor" href="#">Link</a></li>
			<li><a id="video_anchor" href="#">Video</a></li>
		</ul>
	</div>           

	<div id="content">                
        <div id="shares">            
			<h2 id="content-share-title">What's on your mind?</h2>
			<div id="content-share">
				<textarea id="content-share-textarea"></textarea>
				<input id="content-share-submit" type="submit" value="Submit"/>
			</div>
			<div id="content-shared">	
                @{DecoratorContainer container = new DecoratorContainer();}
            				
				@foreach (var share in Model)
                {
                    @Html.Raw(container.CreateInstance(share).ToHtmlView());
                    
                }	
			</div>
        </div>				
	</div>
</div>

