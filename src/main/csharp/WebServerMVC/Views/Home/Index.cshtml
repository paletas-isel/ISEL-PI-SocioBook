@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div id="container" class="subpage">
	<div id="content">
        <div id="user-login">
            <form method="post" action="@Url.Action("LogOn", "Account")">
                <span id="user-name"> User Name: </span> <input name="user" type="text" />
                <span id="password"> Password: </span> <input name="password" type="password" />
                <input type="hidden" name="returnUrl" value="@Url.Action("Wall", "Home")"/>
                <input type="submit" value="Sign in" />                
            </form>
        </div>				
	</div>
</div>